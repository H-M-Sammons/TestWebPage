<%- include('../partials/header.ejs')%>
<div class = "content">
    <h1> You Are Editing <%= story.title%> </h1>
    <form method="POST" action="/stories/<%=story.id%>?_method=PUT">
        <table>
            
            <tr>
                <td><label for="topic">Catogory</label></td>
                <td><input type="text" id="topic" name="topic" value = "<%= story.topic%>" class = "fixed-width" required></td>
            </tr>
            <tr>
                <td><label for="title" >Title</label></td>
                <td><input type="text" id="title" name="title" value = "<%= story.title%>" class = "fixed-width"></td>
            </tr>
            <tr>
                <td><label for="date">Day of Event?</label></td>
                <td><input type="date" id="date" name="date" value = "<%= story.date%>" class = "fixed-width" required></td>
            </tr>
            <tr>
                <td><label for="start" >Start time</label></td>
                <td><input type="time" id="start" name="start" value = "<%= story.start%>" class = "fixed-width"></td>
            </tr>
            <tr>
                <td><label for="end" >Start time</label></td>
                <td><input type="time" id="end" name="end" value = "<%= story.end%>" class = "fixed-width"></td>
            </tr>
            <tr>
                <td><label for="location" >location</label></td>
                <td><input type="text" id="location" name="location" value = "<%= story.location%>" class = "fixed-width"></td>
            </tr>
            <tr><td class = "align-top"><label for="content">Content</label></td>
                <td><textarea rows="5" id="content" name="content" class = "fixed-width"><%= story.content%></textarea></td>
            </tr>
            <tr><td class = "align-top"><label for="otherInfo">Other information</label></td>
                <td><textarea rows="5" id="otherInfo" name="otherInfo" class = "fixed-width"><%= story.otherInfo%></textarea></td>
            </tr>
           
            <tr>
                <td><label for="image">Image URL</label></td>
                <td><input type="text" id="image" name="image" value = "<%= story.image%>" class = "fixed-width" required></td>
            </tr>
            <tr>
                <td colspan="2" class = "align-right"><button>Submit</button></td>
            </tr>
            </table>        
    </form>

    </div>
    <%- include('../partials/footer.ejs')%>
